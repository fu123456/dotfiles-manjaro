# -*- mode: snippet -*-
# name: gradient operator along x and y
# key: gradXY
# --
uvx=ones(h,w);
uvy=uvx;
uvx = uvx(:);
uvy = uvy(:);
ux = padarray(uvx, h, 'pre'); ux = ux(1:end-h);
uy = padarray(uvy, 1, 'pre'); uy = uy(1:end-1);
D = uvx+ux+uvy+uy;
T = spdiags([-uvx, -uvy],[-h,-1],hw,hw);
MN = T + T' + spdiags(D, 0, hw, hw);
$0